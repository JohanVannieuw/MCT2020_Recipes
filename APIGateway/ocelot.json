{
  "Routes": [
    {
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 19402 //http poort (only) van de cartservice
        }
      ],
      "DownstreamPathTemplate": "/api/carts",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/carts",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "RecipesAPIKey",
        "AllowedScopes": []
      }

    },
    {
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44361 //https poort van de service
        }
      ],
      "DownstreamPathTemplate": "/api/auth/login",
      "DownstreamScheme": "https",
      "UpstreamPathTemplate": "/auth/login",
      "UpstreamHttpMethod": [ "POST"]
    },

    {
      "DownstreamHostAndPorts": [
        {
          "Host": "recipes_db",
          "Port":80 
        }
      ],
      "DownstreamPathTemplate": "/swagger/{page}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/swagger/{page}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    {
      "DownstreamHostAndPorts": [
        {
          "Host": "recipes_db", //naam van de service
          "Port": 80 //externe http(only) DOCKER poort van de recipes_db service
        }
      ],
      "DownstreamPathTemplate": "/api/{allServices}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/{allServices}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ,"PATCH"]
    }
  ],
  "GlobalConfiguration": {
    "RequestIdKey": "OcRequestId",
    "BaseUrl": "http://localhost:32809"
    //"http": 10568 //eerdere http poort van de gateway
  }
}

